{
    "manifest_version": 2,
    "name": "hacker-reader",
    "version": "1.0.0",
    "description": "hacker-reader",
    "icons": {
        "16": "images/news16.ico",
        "48": "images/news48.ico",
        "128": "images/news128.ico"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/news19.png",
            "38": "images/news38.png"
        },
        "default_title": "hacker-reader",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
